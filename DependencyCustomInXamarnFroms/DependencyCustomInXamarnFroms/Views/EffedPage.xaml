<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DependencyCustomInXamarnFroms.Views.EffedPage"
             xmlns:Effects="clr-namespace:DependencyCustomInXamarnFroms.Effects"
             Title="Effect">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand">
            <Label Text="Effect attached to an Entry"/>
            <Entry>
                <Entry.Effects>
                    <Effects:FocusEffect/>
                </Entry.Effects>
            </Entry>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>